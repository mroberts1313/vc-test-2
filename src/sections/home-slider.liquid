	</div>
    <div class="homeslide">
		<h1>3</h1>
		<a href="#" class="home-slide-btn">What are you waiting for?!</a>
	</div>-->
{% for block in section.blocks %}
  <div class="homeslide" {{ block.shopify_attributes }}>
    {% case block.type %}
    {% when 'slider' %}
      <img src="{{ block.settings.imgs | img_url: '2000x' }}" class="sliderimg">
      <div class="slider_content">
		  <h1>{{ block.settings.h1 }}</h1>
		  <a href="{{ block.settings.link }}" class="home-slide-btn">{{ block.settings.linktext }}</a>
	  </div>
    {% endcase %}
  </div>
{% endfor %}
  </div>
</div>

<h2 style="text-align: center; margin: 2em 0;">Now that's a nice slider, eh?</h2>

<p style="text-align: center;">It <em>s-u-u-u-u-r-e</em> is!</p>


{% javascript %}
$(document).ready(function(){
	$('.home-1-owl').owlCarousel({
		loop:true,
		margin:10,
		nav:true,
		items:1,
		navText: ["<img src='//d39hwjxo88pg52.cloudfront.net/trydrd/images/btn_prev.png' alt='Previous'>","<img src='//d39hwjxo88pg52.cloudfront.net/trydrd/images/btn_next.png' alt='Next'>"],
	});
});
{% endjavascript %}

{% schema %}
  {
    "name": "HomeSlider",
    "max_blocks": 5,
	"blocks": [
      {
        "type": "slider",
        "name": "slider_info",
        "settings": [
          {
            "id": "imgs",
            "type": "image_picker",
            "label": "Select Image"
          },
		  {
		    "id": "h1",
			"type": "text",
			"label": "Big Promo Text"
		  },
		  {
		    "id": "linktext",
			"type": "text",
			"label": "Link Text",
			"default": "Shop Now"
		  },
		  {
			  "id": "link",
			  "type": "url",
			  "label": "Button link"
			}
        ]
      }
    ]

  }
{% endschema %}
